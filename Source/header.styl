.section-hero .container
	text-align: center

.btn
	display inline-block
	padding 10px 25px
	border-radius: 8px
	letter-spacing: 1px
	background-color rgba(100, 100, 100, 0.5)


.btn:hover
	color: #111111
	cursor pointer
	background-color rgba(250, 250, 250, 0.9)

header
	position: absolute
	width 100%
	z-index 2
	color: #ffffff

.header
	display flex
	flex-wrap: wrap
	@media screen and (min-width: 1000px)
		justify-content space-between
	@media screen and (max-width: 1200px)
		width: 100%

.logo
	margin-top 40px
	display block
	text-transform uppercase
	@media screen and (max-width: 1000px)
		display inline-block
		margin-left: 0
		order: 0

nav
	margin-top 40px
	overflow hidden
	@media screen and (max-width: 1000px)
		padding 0 70px
		margin: auto
		margin-top 40px
		order: 2
	@media screen and (max-width: 700px)
		padding 0
	// @media screen and (max-width: 540px)
	// 	padding 0

.nav_item
	display inline-block
	padding 0 20px
	@media screen and (max-width: 540px)
		padding 0 10px

.tel
	margin-top 40px
	color: #ffffff
	text-decoration none
	@media screen and (max-width: 1000px)
		display inline-block
		margin-left: auto
		margin-right: 0
		order: 1

.tel:hover
	cursor pointer

.section-hero
	height 700px
	background-image url(img/apple_prezent.jpeg)
	background-position center center
	background-repeat: no-repeat
	background-size: cover
	position relative
	color: #ffffff
	overflow hidden

.blackout
	position absolute
	padding 0
	margin 0
	top 0
	left 0
	height 100%
	width 100%
	background-color rgba(30, 30, 30, 0.6)

h1
	font-weight 400
	margin-top 160px
	font-size 80px
	line-height 1.1
	letter-spacing: 3px
	@media screen and (max-width: 1600px)
		font-size 90px
	@media screen and (max-width: 1100px)
		font-size 80px
	@media screen and (max-width: 1000px)
		margin-top 220px
	@media screen and (max-width: 980px)
		font-size 70px
	@media screen and (max-width: 900px)
		font-size 65px
	@media screen and (max-width: 800px)
		font-size 55px
	@media screen and (max-width: 700px)
		font-size 50px
	@media screen and (max-width: 600px)
		font-size 45px
	@media screen and (max-width: 500px)
		font-size 40px

h2
	font-size: 42px
	padding-top 60px
	color: #111

h3
	font-weight: 400
	letter-spacing: 1px
	color #eee
	font-size: 24px
	line-height: 1.5
	@media screen and (max-width: 776px)
		font-size: 22px
		padding-left 10%
		padding-right 10%

h4
	font-size: 26px
	color: #222

.cart p
	color: #555
	font-weight: 600!important

.model_item
	background #555555
	height 100px
	width: 50%
	@media screen and (min-width: 768px)
		width: 33.333%
	@media screen and (min-width: 992px)
		width: 25%
	@media screen and (min-width: 1200px)
		width: 20%

.cart_wrap
	display flex
	flex-wrap wrap

.cart
	width: 100%
	box-sizing: border-box
	padding 0 11%
	@media screen and (min-width: 992px)
		width: 33.3%
		padding 0 3%



.input_wrap
	display flex
	justify-content: center
	margin auto
	flex-direction: column
	@media screen and (min-width: 768px)
		flex-direction: row

	& .btn
		background-color rgba(100, 100, 100, 0.1)
		height 46px
		margin-top 15px
		box-sizing border-box
		@media screen and (max-width: 800px)
			margin-left: auto
			margin-right: auto
	& .btn:hover
		background-color rgba(10, 10, 10, 0.9)
		color: #fff

.input_wrap_item
	padding 0 10px
	padding-bottom 15px
	width: 100%
	position relative
	box-sizing: border-box
	@media screen and (max-width: 800px)
		text-align: center
	@media screen and (min-width: 800px)
		width: 33.333%
		width 200px
	@media screen and (min-width: 840px)
		margin 0 10px

.value_input
	width 180px
	font-size: 22px
	border: 0
	padding-top 15px
	margin: 10px 0
	background transparent
	border-bottom: 1px solid #333

.value_input:focus
	outline: none

.value_input::placeholder
	color #777
	transition: all 0.4s

.value_input:focus::placeholder
	font-size: 14px
	transform: translateY(-22px)


.popout
	position fixed
	top 0
	left 0
	// bottom 0
	right 0
	z-index 5
	// overflow hidden
	height 100%
	h4
		@media screen and (max-width: 700px)
			display block
			margin-left 20px
			margin-right 20px

	.popout_window
		z-index 8
		text-align: center
		background #fff
		padding 50px 0
		width 500px
		height 400px
		margin-top 10%
		margin-left: auto
		margin-right: auto
		position relative
		@media screen and (max-height: 1600px)
			margin-top: 200px
			height 420px
		@media screen and (max-height: 1100px)
			margin-top: 200px
		@media screen and (max-height: 980px)
			margin-top: 180px
		@media screen and (max-height: 900px)
			margin-top: 150px
		@media screen and (max-height: 800px)
			margin-top: 140px
		@media screen and (max-height: 700px)
			margin-top: 80px
			padding 30px 0
			height 430px
		@media screen and (max-height: 600px)
			margin-top: 20px
			padding 20px 0
			height 500px
		@media screen and (max-height: 500px)
			margin-top: 20px
			padding 10px 0
		@media screen and (max-width: 600px)
			width 400px

	.popout_window_close
		position absolute
		top 0
		right 0
		cursor pointer
		padding 20px
		font-size: 30px
		color: #999

	input
		width 200px
		padding-top: 13px
		margin-top: 0
		margin-bottom: 18px
	.connect_me_wrap
		margin-left 125px
		text-align left
		@media screen and (max-width: 600px)
			margin-left 65px

	.connect_me
		display inline-block
		margin-top 5px
		color #333
		text-align: left
	.check
		display inline-block
		height 22px
		min-width 22px
		margin-right 8px
		// background-image url("img/check.svg")
	.border
		margin-top 9px
		margin-left 3px
		border 1px solid #999
		height 12px
		width 12px
	.btn
		margin: 15px auto 5px auto
		background-color rgba(100, 100, 100, 0.1)
	.btn:hover
		background-color rgba(10, 10, 10, 0.9)
		color: #fff

.consent
	font-size 14px
	padding 5px 10px
	color: #555
	text-align center
	a
		color #558

.comment
	background #ddd
	padding 30px 30px
	margin 0 1.5%
	width 30%
	box-sizing: border-box
	overflow-y: hidden

.cart_bottom_wrap
	display: flex
	align-items: center

.cart_bottom_img
	display inline-block
	height 90px
	width 90px
	margin 15px 15px 15px 0
	border-radius 50%
	background-image url("img/avatar.jpg")
	background-size: cover
.cart_bottom_name
	display inline-block
	// text-align center

.contact_page p
	font-size: 28px

.icon svg
	height 130px
	width 130px
	margin-top 30px



