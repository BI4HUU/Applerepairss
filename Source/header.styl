.section-hero .container
	text-align: center

.btn
	display inline-block
	padding 10px 25px
	border-radius: 8px
	letter-spacing: 1px
	background-color rgba(100, 100, 100, 0.5)


.btn:hover
	color: #111111
	cursor pointer
	background-color rgba(250, 250, 250, 0.9)

header
	position: absolute
	width 100%
	z-index 2
	color: #ffffff

.header
	display flex
	flex-wrap: wrap
	@media screen and (min-width: 1000px)
		justify-content space-between
	@media screen and (max-width: 1200px)
		width: 100%

.logo
	margin-top 40px
	display block
	text-transform uppercase
	@media screen and (max-width: 1000px)
		display inline-block
		margin-left: 0
		order: 0

nav
	margin-top 40px
	overflow hidden
	@media screen and (max-width: 1000px)
		padding 0 70px
		margin: auto
		margin-top 40px
		order: 2
	@media screen and (max-width: 700px)
		padding 0
	// @media screen and (max-width: 540px)
	// 	padding 0

.nav_item
	display inline-block
	padding 0 20px
	@media screen and (max-width: 540px)
		padding 0 10px

.tel
	margin-top 40px
	color: #ffffff
	text-decoration none
	@media screen and (max-width: 1000px)
		display inline-block
		margin-left: auto
		margin-right: 0
		order: 1

.tel:hover
	cursor pointer

.section-hero
	height 700px
	background-image url(img/apple_prezent.jpeg)
	background-position center center
	background-repeat: no-repeat
	background-size: cover
	position relative
	color: #ffffff
	overflow hidden

.blackout
	position absolute
	padding 0
	margin 0
	top 0
	left 0
	height 100%
	width 100%
	background-color rgba(30, 30, 30, 0.6)

h1
	font-weight 400
	margin-top 160px
	font-size 80px
	line-height 1.1
	letter-spacing: 3px
	@media screen and (max-width: 1600px)
		font-size 90px
	@media screen and (max-width: 1100px)
		font-size 80px
	@media screen and (max-width: 1000px)
		margin-top 220px
	@media screen and (max-width: 980px)
		font-size 75px
	@media screen and (max-width: 900px)
		font-size 70px
	@media screen and (max-width: 800px)
		font-size 65px
	@media screen and (max-width: 700px)
		font-size 55px
	@media screen and (max-width: 600px)
		font-size 50px
	@media screen and (max-width: 500px)
		font-size 45px

h2
	font-size: 42px
	padding-top 60px
	color: #111

h3
	font-weight: 400
	letter-spacing: 1px
	color #eee
	font-size: 24px
	line-height: 1.5
	@media screen and (max-width: 776px)
		font-size: 22px
		padding-left 10%
		padding-right 10%

h4
	font-size: 26px
	color: #222

.cart p
	color: #555
	font-weight: 600!important

.model_item
	background #555555
	height 100px
	width: 50%
	@media screen and (min-width: 768px)
		width: 33.333%
	@media screen and (min-width: 992px)
		width: 25%
	@media screen and (min-width: 1200px)
		width: 20%

.cart_wrap
	display flex
	flex-wrap wrap

.cart
	width: 100%
	box-sizing: border-box
	padding 0 11%
	@media screen and (min-width: 992px)
		width: 33.3%
		padding 0 3%



.input_wrap
	display flex
	flex-wrap: wrap
	margin auto
	padding-left 5%
	@media screen and (min-width: 768px)
		max-width 600px

	& .btn
		background-color rgba(100, 100, 100, 0.1)
		height 46px
		margin-top 15px
		box-sizing border-box
		@media screen and (max-width: 800px)
			margin-left: auto
			margin-right: auto
	& .btn:hover
		background-color rgba(10, 10, 10, 0.9)
		color: #fff

.input_wrap_item
	padding 0 10px
	padding-bottom 15px
	width: 100%
	position relative
	box-sizing: border-box
	@media screen and (max-width: 800px)
		text-align: center
	@media screen and (min-width: 800px)
		width: 33.333%
		width 200px
	@media screen and (min-width: 840px)
		margin 0 10px

.value_input
	width 180px
	font-size: 22px
	border: 0
	padding-top 15px
	margin: 10px 0
	background transparent
	border-bottom: 1px solid #333

.value_input:focus
	outline: none

.value_input::placeholder
	color #777
	transition: all 0.4s

.value_input:focus::placeholder
	font-size: 14px
	transform: translateY(-22px)







.popout
	position absolute
	top 0
	left 0
	// bottom 0
	right 0
	z-index 5
	height 100vh
	.popout_window
		text-align: center
		background #fff
		padding 50px 0
		width 500px
		height 400px
		margin-top 10%
		margin-left: auto
		margin-right: auto
		@media screen and (max-height: 1600px)
			margin-top: 200px
			height 400px
		@media screen and (max-height: 1100px)
			margin-top: 200px
		@media screen and (max-height: 1000px)
			margin-top: 200px
		@media screen and (max-height: 980px)
			margin-top: 200px
		@media screen and (max-height: 900px)
			margin-top: 200px
		@media screen and (max-height: 800px)
			margin-top: 200px
		@media screen and (max-height: 700px)
			margin-top: 100px
		@media screen and (max-height: 600px)
			margin-top: 80px
		@media screen and (max-height: 500px)
			margin-top: 70px

	input
		width 200px

	.connect_me_wrap
		margin-left 125px
		text-align: left

	.connect_me
		display inline-block
		margin-top 3px
		color #333
		text-align: left
	.check
		display inline-block
		height 14px
		min-width 14px
		margin-right 8px
		border 1px solid #222
		background-image url(/img/check.svg)
	.btn
		margin: auto
		margin-top 15px
		background-color rgba(100, 100, 100, 0.1)
	.btn:hover
		background-color rgba(10, 10, 10, 0.9)
		color: #fff
